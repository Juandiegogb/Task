<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="styles/home.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap5.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
      integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
      crossorigin="anonymous"
    />
    <script src="scripts/homeMethods.js"></script>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="navbar-brand">Mi App</div>
      <div><h1>Hola <%= data.rol%> <%= data.name%></h1></div>
      <div><a type="button" href="/logout">Log Out</a></div>
    </nav>
    <main class="content">
      <div class="container">
        <a href="/create" class="btn btn-primary mt-4"
          ><i class="fas fa-plus-square"></i
        ></a>
        <table
          id="info"
          class="table table-bordered table-striped text-center mt-4"
        >
          <thead>
            <tr class="text-white" style="background-color: #6200ee">
              <th scope="col">ID TAREA</th>
              <th scope="col">DESCRIPCION</th>
              <th scope="col">ESTADO</th>
              <th scope="col">ACCIONES</th>
            </tr>
          </thead>
          <tbody>
            <% tareas.forEach(function(tarea) { %>
            <tr>
              <td><%= tarea.idtarea %></td>
              <td><%= tarea.descripcion %></td>
              <% if (tarea.estado == 0) {%>
              <td>PENDIENTE</td>
              <% } else {%>
              <td>TERMINADO</td>
              <% }%>

              <td>
                <a href="/edit/<%= tarea.idtarea %>" class="btn btn-info">
                  <i class="fas fa-edit"></i>
                </a>
                <a onclick="confirmar( tarea.idtarea )" class="btn btn-danger">
                  <i class="fas fa-trash-alt"></i>
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
